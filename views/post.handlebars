  <section class="card">
    <div>
    <h1 id="post-id">{{posts.id}}</h1>
    <header>
      <h2>{{posts.title}}</h2>
      <p>Posted by {{posts.user.username}} on {{format_date posts.createdAt}}</p>
    </header>
    <div>
      <p>
        {{posts.content}}
      </p>
    </div>
    </div>
{{#each comments as |comment|}}
{{> comment-details}}
{{/each}}
  </section>
<section>
  <h2>New Comment</h2>
  <form class="form comment-form">
    <div class="form-group">
      <label for="comment-content"></label>
      <input class="form-input" type="text" id="comment-content" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Post Comment</button>
    </div>
  </form>

</section>

<script src="/js/comment.js"></script>