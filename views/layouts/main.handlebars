<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
    <link rel="stylesheet" type="text/css" href="/css/jass.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>

  <body>
    <nav>
      <div class="nav">
        <a href="/">Home</a>
        <a href="/dashboard">Dashboard</a>
        {{#if loggedIn}}
          <a href=""><button id="logout" class="btn-no-style">Logout</button></a>
        {{else}}
          <a href="/login"><button class="btn-no-style">Login</button></a>
        {{/if}}
      </div>
      <div>
        {{#if loggedIn}}
          <p class="username">Welcome {{username}}</p>
        {{/if}}
      </div>
    </nav>

    <header>
      <h1>The Tech Blog</h1>
    </header>

    <main>
      <div class="main-content">
        {{{body}}}
      </div>
    </main>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>